{
  "name": "@aibtcdev/tools",
  "version": "0.0.4",
  "private": true,
  "dependencies": {
    "@bitflowlabs/core-sdk": "^1.0.1",
    "@jingcash/core-sdk": "^0.1.4",
    "@stacks/blockchain-api-client": "^8.4.0",
    "@stacks/bns": "^6.15.0",
    "@stacks/connect": "^7.7.1",
    "@stacks/stacking": "^6.16.1",
    "@stacks/stacks-blockchain-api-types": "^7.9.0",
    "@stacks/transactions": "^6.12.1",
    "@stacks/wallet-sdk": "^6.12.1",
    "bitflow-sdk": "^1.6.1",
    "eta": "^3.5.0",
    "stxcity-sdk": "^1.0.10",
    "tslib": "^2.7.0"
  },
  "devDependencies": {
    "@types/bun": "^1.1.6",
    "@types/node": "^22.10.2",
    "bun-types": "^1.1.17",
    "tsup": "^8.3.5",
    "typescript": "^5.0.0"
  },
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "bin": {
    "aibtc-wallet": "./src/stacks-wallet/index.ts",
    "aibtc-bns": "./src/stacks-bns/index.ts",
    "aibtc-nft": "./src/sip-009/index.ts"
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "cli:wallet": "bun run src/stacks-wallet/index.ts",
    "cli:bns": "bun run src/stacks-bns/index.ts",
    "cli:nft": "bun run src/sip-009/index.ts",
    "test": "bun test -t 'DAO SDK'",
    "version:patch": "npm version patch -m \"chore: release v%s\"",
    "version:minor": "npm version minor -m \"chore: release v%s\"",
    "version:major": "npm version major -m \"chore: release v%s\"",
    "release:patch": "npm run build && npm run version:patch && git push --follow-tags",
    "release:minor": "npm run build && npm run version:minor && git push --follow-tags",
    "release:major": "npm run build && npm run version:major && git push --follow-tags",
    "preversion": "npm run build && npm test",
    "postversion": "git push && git push --tags"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./dao": {
      "types": "./dist/stacks-dao/index.d.ts",
      "import": "./dist/stacks-dao/index.mjs",
      "require": "./dist/stacks-dao/index.js"
    }
  }
}
